{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Conan: Install Debug",
      "type": "shell",
      "options": {
        "cwd": "${workspaceRoot}/build"
      },
      "command": "mkdir -p build && conan install .. --output-folder=. --build=missing --profile:build=../conan-profile.txt --profile:host=../conan-profile.txt --settings=build_type=Debug"
    },
    {
      "label": "Conan: Install Release",
      "type": "shell",
      "options": {
        "cwd": "${workspaceRoot}/build"
      },
      "command": "mkdir -p build && conan install .. --output-folder=. --build=missing --profile:build=../conan-profile.txt --profile:host=../conan-profile.txt --settings=build_type=Release"
    },
    {
      "label": "Cmake: Build Debug",
      "type": "shell",
      "options": {
        "cwd": "${workspaceRoot}/build"
      },
      "command": "cmake .. -DCMAKE_TOOLCHAIN_FILE=conan_toolchain.cmake -DCMAKE_BUILD_TYPE=Debug && cmake --build . -j 4",
      "dependsOn": ["Conan: Install Debug"]
    },
    {
      "label": "Cmake: Build Release",
      "type": "shell",
      "options": {
        "cwd": "${workspaceRoot}/build"
      },
      "command": "cmake .. -DCMAKE_TOOLCHAIN_FILE=conan_toolchain.cmake -DCMAKE_BUILD_TYPE=Release && cmake --build . -j 4",
      "dependsOn": ["Conan: Install Release"]
    }
  ]
}
